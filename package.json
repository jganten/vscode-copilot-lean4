{
  "name": "vscode-copilot-lean4",
  "displayName": "vscode-copilot-lean4",
  "description": "This extension provides the backbone for Copilot extensions for Lean 4 and Mathlib4.",
  "version": "0.0.1",
  "publisher": "jganten",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:tspascoal.copilot.capy1.listmodels",
    "onCommand:tspascoal.copilot.capy1.tescht"
  ],
  "extensionDependencies": [
    "github.copilot",
    "github.copilot-chat"
  ],
  "main": "./dist/extension.js",
  "contributes": {    
    "chatParticipants": [
      {
        "id": "tspascoal.copilot.capy1",
        "name": "capy1",
        "fullName": "Capy1",
        "description": "Capy1 assists with Copilot for Lean 4 by providing LLM interaction.",
        "isSticky": true,
        "commands": [
          {
            "name": "listmodels",
            "when": "config.tspascoal.copilot.capy1.like.enabled",
            "description": "List the available LLM models."
          },
          {
            "name": "tescht",
            "when": "config.tspascoal.copilot.capy1.like.enabled",
            "description": "Run a test command."
          }
        ]
      }
    ],
    "configuration": {
      "title": "Capy1 Settings",
      "properties": {
        "tspascoal.copilot.capy1.like.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Capy1's special speaking mode."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "esbuild": "^0.24.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
